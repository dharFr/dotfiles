[alias]
	# see http://www.durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
	# ==========================================================================

	co = checkout
	br = branch -v
  ba = branch -va
  cm = commit -v
	ru = remote update
  nlog = log --name-status --decorate
  gr = log --pretty=oneline --abbrev-commit --decorate --graph

	# View the current working tree status using the untracked mode
	st = status -u
	
	# List commits in short form, with colors and branch/tag annotations
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate

	# List commits showing changed files
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

	# List with no colors if you need to chain the out put with Unix pipes
	lnc = log --pretty=format:"%h\\ %s\\ [%cn]"

[user]
	name = Olivier Audard
	email = audard@gmail.com

[core]
	excludesfile = ~/.gitignore-global
	whitespace = trailing-space,space-before-tab,tab-in-indent
	editor = vim

[rerere]
  enabled = true
  
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
	ui = auto

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
	remote = origin
	merge = refs/heads/master

[merge]
    tool = vimdiff
    summary = true